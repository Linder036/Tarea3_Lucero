<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea2_Lucero.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Beige" Padding="24" CornerRadius="0">
                <Label Text="Login Calificaciones" HorizontalTextAlignment="Center" TextColor="Black" FontSize="10"/>
            </Frame>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la contrasena" IsPassword="True"/>
            
            <Button x:Name="btnAbrir" Text="Login" Clicked="btnAbrir_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>